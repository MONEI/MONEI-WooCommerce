    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          "../readme.txt"
        ]
      }
    }
  },
  "devDependencies": {
    "@release-it/bumper": "^3.0.1",
    "release-it": "^14.11.6"
  }
}
