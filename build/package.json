{
  "name": "monei-woocommerce",
  "version": "5.8.2",
  "main": "index.js",
  "repository": "git@github.com:MONEI/MONEI-WooCommerce.git",
  "author": "MONEI <support@monei.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "terser ../assets/js/monei.js --compress --mangle --output ../assets/js/monei.min.js",
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "tagName": "${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          "../readme.txt",
          "../woocommerce-gateway-monei.php",
          "../class-woocommerce-gateway-monei.php"
        ]
      }
    },
    "hooks": {
      "after:bump": "yarn run build && git add -A"
    }
  },
  "devDependencies": {
    "@release-it/bumper": "^3.0.1",
    "release-it": "^14.12.4",
    "terser": "^5.10.0"
  }
}
