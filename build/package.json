{
  "name": "monei-woocommerce",
  "version": "5.2.2",
  "main": "index.js",
  "repository": "git@github.com:MONEI/MONEI-WooCommerce.git",
  "author": "MONEI <support@monei.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "tagName": "${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
