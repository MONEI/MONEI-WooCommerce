{
  "name": "monei-woocommerce",
  "version": "6.3.8",
  "main": "index.js",
  "repository": "git@github.com:MONEI/MONEI-WooCommerce.git",
  "author": "MONEI <support@monei.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "wp-scripts build",
    "check-engines": "wp-scripts check-engines",
    "check-licenses": "wp-scripts check-licenses",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "lint:js-fix": "wp-scripts lint-js --fix",
    "lint:md:docs": "wp-scripts lint-md-docs",
    "lint:pkg-json": "wp-scripts lint-pkg-json",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "start": "wp-scripts start",
    "test:e2e": "wp-scripts test-e2e",
    "test:unit": "wp-scripts test-unit-js",
    "release": "release-it",
    "prepare": "husky"
  },
  "release-it": {
    "git": {
      "tagName": "${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "autoGenerate": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          "readme.txt",
          "woocommerce-gateway-monei.php",
          "class-woocommerce-gateway-monei.php"
        ]
      }
    },
    "hooks": {
      "after:bump": "generate-wp-readme && git add readme.txt CHANGELOG.md README.md"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@release-it/bumper": "^7.0.5",
    "@snrankin/generate-wp-readme": "^1.2.0",
    "@wordpress/scripts": "^30.24.0",
    "husky": "^9.1.7",
    "release-it": "^19.0.5"
  },
  "packageManager": "yarn@4.10.3"
}
