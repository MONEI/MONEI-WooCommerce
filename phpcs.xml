<?xml version="1.0"?>
<ruleset name="Monei">
    <description>Monei ruleset.</description>

    <!-- WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Exclude the rule for snake_case variable names -->
        <exclude name="WordPress.NamingConventions"/>
    </rule>

    <!-- Exclude specific directories from being inspected -->
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>node_modules/</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/Tests/*</exclude-pattern>

</ruleset>
